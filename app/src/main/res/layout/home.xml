<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:fontFamily="sans-serif-light"
            android:paddingTop="0dp"
            android:selectAllOnFocus="false"
            android:text="       NAVEGADOR"
            android:textColor="#060A50"
            android:textSize="40sp" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:onClick="clicarLogin"
            android:text="@string/btLogin"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btCadastro"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:onClick="clicarCadastro"
            android:text="@string/btCadastro"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btSobre"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:onClick="clicarSobre"
            android:text="@string/btSobre"
            android:textSize="24sp" />
    </TableRow>

</LinearLayout>